<!DOCTYPE html>
<html>
<head>
  <title>Sklep z kotami</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>

  <div class="user-panel-container">
    <% if current_user.present? %>
      <%= link_to "wyloguj", destroy_user_session_path, :method => :delete %>
    <% else %>
      <%= link_to "rejestracja", new_user_registration_path %>
      <%= link_to "zaloguj", new_user_session_path %>
    <% end %>
    <%= link_to current_user.email, front_user_path %>
  </div>

  <%= yield %>

</body>
</html>
